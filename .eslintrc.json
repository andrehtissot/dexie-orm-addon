{
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "env": {
    "node": true
  },
  "rules": {
    "no-undef": ["error"],
    "semi": ["warn", "never"],
    "prettier/prettier": "error"
  },
  "globals": {
    "Dexie": true,
    "Promise": true,
    "WeakMap": true,
    "Map": true,
    "Set": true
  }
}
